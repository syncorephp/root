; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.htaccess]
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.{yml, yaml}]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
